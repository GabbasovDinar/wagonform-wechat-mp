/* Header */
.header {
  text-align: center;
  align-content: center;
  background-color: #D3D3D3;
  height: 100px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-bottom: 1px solid #656464;
}
.h1-header {
  color:#656464;
  font-size: 35rpx; 
  font-weight: 800;
  padding: 30px;
}
  
/* Body */
.wagon-wrap {
  padding: 10px 10px;
  margin: 0px 10px;
  text-align: left;
}

/* Cards */
.card {
  height: 100px;
  position: relative;
  margin-top: 15px;
  border-radius: 5px;
  border-style: solid;
  border-color: #D3D3D3;
  border-width: 0.5px;
  box-shadow: 0 1px 2px 0 rgba(0,0,0,0.1);
}
.card-description {
  padding: 0 10px;
  color: #888888;
  font-size:12px;
  margin-top: -4px;
}
.card-author {
  position: absolute;
  bottom: 10px;
  right: 10px;
  font-size: 10px;
  text-transform: uppercase;
  color: black;
}
